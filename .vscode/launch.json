{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Go Backend",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/backend/src/main.go",
        "cwd": "${workspaceFolder}/backend",
        "env": {},
        "args": []
      },
      {
        "name": "Debug Frontend (Chrome)",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend",  // Adjusted to point to frontend root
        "sourceMapPathOverrides": {
          // Updated path mappings
          "webpack:///./*": "${webRoot}/*",
          "webpack:///src/*": "${webRoot}/src/typescript/src/*",
          "webpack:///*": "*",
          "webpack:///./~/*": "${webRoot}/node_modules/*"
        },
        "sourceMaps": true,
        "trace": true,
        "userDataDir": false,  // Let Chrome use your profile
        "runtimeArgs": [
          "--remote-debugging-port=9222"
        ],
        "outFiles": [
          "${workspaceFolder}/frontend/src/typescript/dist/**/*.js"
        ]
      },
      {
        "name": "Debug Frontend (Firefox)",
        "type": "firefox",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend/src/typescript/src",
        "pathMappings": [
          {
            "url": "webpack:///",
            "path": "${workspaceFolder}/frontend/src/typescript"
          }
        ]
      },
      {
        "name": "Debug Frontend Webpack",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/frontend/src/typescript/node_modules/webpack/bin/webpack.js",
        "args": ["serve"],
        "cwd": "${workspaceFolder}/frontend/src/typescript",
        "sourceMaps": true
      }
    ],
    "compounds": [
      {
        "name": "Full Stack Debug (Chrome)",
        "configurations": ["Debug Go Backend", "Debug Frontend (Chrome)"]
      },
      {
        "name": "Full Stack Debug (Firefox)",
        "configurations": ["Debug Go Backend", "Debug Frontend (Firefox)"]
      }
    ]
}